{
    /// VS Code Settings ///
    "editor.rulers": [
        80
    ],
    "editor.fontFamily": "'DejaVu Sans Mono Book', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.renderWhitespace": "boundary",
    "editor.accessibilitySupport": "off",
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",
    "workbench.editor.focusRecentEditorAfterClose": false,

    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "xml": "xml"
    },

    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,

    "files.associations": {
        "ansible": "ini",
        "inventory": "ini",
        "*.service": "ini",
        ".pylintrc": "ini",
        "todo": "markdown",
        "*.html": "jinja-html",
        "**/i3/config": "i3"
    },
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/.terraform": true,
        "**/*.tfstate": true,
        "**/*.tfstate*": true,
        "**/*~": true,
        "**/CVS": true,
        "**/terraform.d": true,
        "**/terraform.tfstate.d": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
    },
    "files.trimTrailingWhitespace": true,

    "search.useIgnoreFiles": false,
    "search.exclude": {
        "**/venv": true,
        "**/*.log": true
    },

    "telemetry.enableTelemetry": false,

    "terminal.integrated.fontSize": 18,
    "terminal.integrated.fontFamily": "'DejaVu Sans Mono for Powerline', 'DejaVu Sans Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.rendererType": "dom",

    "window.enableMenuBarMnemonics": false,
    "window.openFoldersInNewWindow": "on",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": -0.5,

    "workbench.editor.openPositioning": "last",
    "workbench.editor.tabCloseButton": "off",
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 16,

    "zenMode.fullScreen": false,
    "zenMode.hideActivityBar": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,

    /// Plugin Settings ///
    // vscodevim
    // workaround required for setxkbmap to remap capslock to esc on Ubuntu
    "keyboard.dispatch": "keyCode",
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {"before": ["j", "k"], "after": ["<Esc>"]},
        {"before": ["capslock"], "after": ["<Esc>"]}
    ],
    "vim.normalModeKeyBindings": [
        // file navigation
        {"before": ["H"], "commands": ["cursorHome"]},
        {"before": ["L"], "commands": ["cursorEnd"]},
        {"before": ["J"], "after": ["<C-d>"]},
        {"before": ["K"], "after": ["<C-u>"]},

        // setext-style headers for markdown and plain text
        {"before": ["<leader>", "1"], "after": ["y", "y", "p", "V", "r", "="]},
        {"before": ["<leader>", "2"], "after": ["y", "y", "p", "V", "r", "-"]},
        {"before": ["<leader>", "3"], "after": ["0", "i", "#", "#", "#", " ", "<Esc>", "$"]},

        // navigating between editors/tabs
        {"before": ["<leader>", "h"], "commands": ["workbench.action.previousEditor"]},
        {"before": ["<leader>", ","], "commands": ["workbench.action.previousEditor"]},
        {"before": ["<leader>", "l"], "commands": ["workbench.action.nextEditor"]},
        {"before": ["<leader>", "."], "commands": ["workbench.action.nextEditor"]},

        // saving and closing
        {"before": ["<C-w>"], "commands": ["workbench.action.closeActiveEditor"]},
        {"before": ["<leader>", "w"], "commands": ["workbench.action.files.save"]},
        {"before": ["<leader>", "q"], "commands": ["workbench.action.closeActiveEditor"]},

        // vscode-native searching
        {"before": ["<leader>", "f"], "commands": ["actions.find"]},
        {"before": ["<leader>", "r"], "commands": ["editor.action.startFindReplaceAction"]},

        // reset vim search highlight
        {"before": ["<leader>", "/"], "commands": [":nohl"]},

        // quick commands
        {"before": ["<leader>", "p"], "commands": ["workbench.action.showCommands"]},
        {"before": ["<leader>", "o"], "commands": ["workbench.action.quickOpen"]},

        // navigation
        {"before": ["<leader>", "e"], "commands": ["workbench.view.explorer"]},
        {"before": ["<leader>", "E"], "commands": ["workbench.files.action.showActiveFileInExplorer"]},
    ],

    // azure functions
    "azureFunctions.enablePowerShell": true,

    /// Language Specific Settings ///
    "[ansible]": {
        "editor.tabSize": 2
    },
    "[bats]": {
        "editor.tabSize": 2
    },
    "[go]": {
        "go.autocompleteUnimportedPackages": true
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": false,
    },
    "markdown.preview.fontSize": 18,
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "[terraform]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": true
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "shellcheck.disableVersionCheck": true,
    "shellcheck.customArgs": ["-x"],
    "explorer.confirmDragAndDrop": false,

    "newFile.relativeTo": "file",
    "newFile.showPathRelativeTo": "project",
    "[plaintext]": {
        "editor.tabSize": 2
    },
    "[jinja-md]": {
        "editor.tabSize": 2
    },
    "[jinja-html]": {
        "editor.tabSize": 2
    },
    "workbench.colorTheme": "Slack Theme Dark Mode",
    "editor.fontSize": 16,
    "[verilog]": {
        "editor.tabSize": 2
    },
    "[systemverilog]": {
        "editor.tabSize": 2
    },
    "[haskell]": {
        "editor.tabSize": 2
    },
    "explorer.openEditors.visible": 0,
    "python.defaultInterpreterPath": "/usr/bin/python3.8",
    "python.showStartPage": false,
}