{
    /// VS Code Settings ///
    "editor.rulers": [
        80
    ],
    "editor.fontFamily": "'DejaVu Sans Mono Book', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.renderWhitespace": "boundary",
    "editor.accessibilitySupport": "off",
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",
    "workbench.editor.focusRecentEditorAfterClose": false,

    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "xml": "xml"
    },

    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,

    "files.associations": {
        "ansible": "ini",
        "inventory": "ini",
        "*.service": "ini"
    },
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/.terraform": true,
        "**/*.tfstate": true,
        "**/*.tfstate*": true,
        "**/*~": true,
        "**/CVS": true,
        "**/terraform.d": true,
        "**/terraform.tfstate.d": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
    },
    "files.trimTrailingWhitespace": true,

    "search.useIgnoreFiles": false,
    "search.exclude": {
        "**/venv": true
    },

    "telemetry.enableTelemetry": false,

    "terminal.integrated.fontFamily": "'DejaVu Sans Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.rendererType": "dom",

    "window.enableMenuBarMnemonics": false,
    "window.openFilesInNewWindow": "default",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,

    "workbench.editor.openPositioning": "last",
    "workbench.editor.tabCloseButton": "off",
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 16,

    "zenMode.fullScreen": false,
    "zenMode.hideActivityBar": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,

    /// Plugin Settings ///
    // vscodevim
    // workaround required for setxkbmap to remap capslock to esc on Ubuntu
    "keyboard.dispatch": "keyCode",
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {"before": ["j", "k"], "after": ["<Esc>"]},
        {"before": ["capslock"], "after": ["<Esc>"]}
    ],
    "vim.normalModeKeyBindings": [
        // file navigation
        {"before": ["H"], "after": ["^"]},
        {"before": ["L"], "after": ["$"]},
        {"before": ["J"], "after": ["<C-d>"]},
        {"before": ["K"], "after": ["<C-u>"]},

        // setext-style headers for markdown and plain text
        {"before": ["<leader>", "1"], "after": ["y", "y", "p", "V", "r", "="]},
        {"before": ["<leader>", "2"], "after": ["y", "y", "p", "V", "r", "-"]},

        // various actions
        {"before": ["<C-w>"], "commands": ["workbench.action.closeActiveEditor"]},
        {"before": ["<leader>", "u"], "commands": ["workbench.action.reopenClosedEditor"]},
        {"before": ["<leader>", "m"], "commands": ["workbench.action.editor.changeLanguageMode"]},
        {"before": ["<leader>", ","], "commands": ["workbench.action.openSettingsJson"]},
        {"before": ["<leader>", "K"], "commands": ["workbench.action.openGlobalKeybindings"]},
        {"before": ["<leader>", "k"], "commands": ["workbench.action.openGlobalKeybindingsFile"]},
        {"before": ["<leader>", "/"], "commands": [":nohl"]},
        {"before": ["<leader>", "p"], "commands": ["workbench.action.showCommands"]},
        {"before": ["<leader>", "o"], "commands": ["workbench.action.quickOpen"]},
        {"before": ["<leader>", "h"], "commands": ["workbench.action.previousEditor"]},
        {"before": ["<leader>", "l"], "commands": ["workbench.action.nextEditor"]},
        {"before": ["<leader>", "w"], "commands": ["workbench.action.files.save"]},
        {"before": ["<leader>", "q"], "commands": ["workbench.action.closeActiveEditor"]},
        {"before": ["<leader>", "f"], "commands": ["actions.find"]},
        {"before": ["<leader>", "r"], "commands": ["editor.action.startFindReplaceAction"]},
        {"before": ["<leader>", "e"], "commands": ["workbench.view.explorer"]},
        {"before": ["<leader>", "E"], "commands": ["workbench.files.action.showActiveFileInExplorer"]},
    ],

    // azure functions
    "azureFunctions.enablePowerShell": true,

    /// Language Specific Settings ///
    "[ansible]": {
        "editor.tabSize": 2
    },
    "[go]": {
        "go.autocompleteUnimportedPackages": true
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": false,
    },
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "[terraform]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": true
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "shellcheck.disableVersionCheck": true,
    "explorer.confirmDragAndDrop": false,

    "newFile.relativeTo": "file",
    "newFile.showPathRelativeTo": "project",
    "[plaintext]": {
        "editor.tabSize": 2
    }
}