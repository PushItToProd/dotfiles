{
    /// VS Code Settings ///
    "editor.rulers": [
        80
    ],
    "editor.renderWhitespace": "boundary",
    "editor.accessibilitySupport": "off",
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",
    "editor.semanticHighlighting.enabled": true,
    "workbench.editor.focusRecentEditorAfterClose": false,

    "emmet.showSuggestionsAsSnippets": true,
    "emmet.includeLanguages": {
        "xml": "xml"
    },

    "editor.linkedEditing": false,

    "explorer.autoReveal": false,

    "files.associations": {
        "ansible": "ini",
        "inventory": "ini",
        "*.service": "ini",
        ".pylintrc": "ini",
        "todo": "markdown",
        "*.html": "html",
        "**/i3/config": "i3",
        "*.html5": "html",
        "COMMIT_EDITMSG": "git-commit",
        "*.h": "c"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.terraform": true,
        "**/*.tfstate": true,
        "**/*.tfstate*": true,
        "**/*~": true,
        "**/terraform.d": true,
        "**/terraform.tfstate.d": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
        "**/*.olean": true,
        "**/node_modules": false,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.trimTrailingWhitespace": true,

    "search.useIgnoreFiles": false,
    "search.exclude": {
        "**/venv": true,
        "**/*.log": true
    },

    "telemetry.enableTelemetry": false,
    "terminal.integrated.fontFamily": "'DejaVu Sans Mono for Powerline', 'DejaVu Sans Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.rendererType": "dom",

    "window.enableMenuBarMnemonics": false,
    "window.openFoldersInNewWindow": "on",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    "window.titleBarStyle": "custom",

    "workbench.editor.openPositioning": "right",
    "workbench.editor.tabCloseButton": "off",
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 16,

    "zenMode.fullScreen": false,
    "zenMode.hideActivityBar": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,

    /// Plugin Settings ///
    // vscodevim
    // workaround required for setxkbmap to remap capslock to esc on Ubuntu
    "keyboard.dispatch": "keyCode",
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        {"before": ["j", "k"], "after": ["<Esc>"]},
        {"before": ["capslock"], "after": ["<Esc>"]},
        {"before": ["<C-v>"],  "commands": ["editor.action.clipboardPasteAction"]}
    ],
    "vim.normalModeKeyBindings": [
        {"before": ["j"], "after": ["g", "j"]},
        {"before": ["k"], "after": ["g", "k"]},

        // file navigation
        {"before": ["H"], "commands": ["cursorHome"]},
        {"before": ["L"], "commands": ["cursorEnd"]},
        {"before": ["J"], "after": ["<C-d>"]},
        {"before": ["K"], "after": ["<C-u>"]},

        // setext-style headers for markdown and plain text
        {"before": ["<leader>", "1"], "after": ["y", "y", "p", "V", "r", "="]},
        {"before": ["<leader>", "2"], "after": ["y", "y", "p", "V", "r", "-"]},
        {"before": ["<leader>", "3"], "after": ["0", "i", "#", "#", "#", " ", "<Esc>", "$"]},

        // saving and closing
        {"before": ["<C-w>"], "commands": ["workbench.action.closeActiveEditor"]},
        {"before": ["<leader>", "w"], "commands": ["workbench.action.files.save"]},
        {"before": ["<leader>", "q"], "commands": ["workbench.action.closeActiveEditor"]},

        // vscode-native searching
        {"before": ["<leader>", "f"], "commands": ["actions.find"]},
        {"before": ["<leader>", "r"], "commands": ["editor.action.startFindReplaceAction"]},

        // reset vim search highlight
        {"before": ["<leader>", "/"], "commands": [":nohl"]},

        // quick commands
        {"before": ["<leader>", "p"], "commands": ["workbench.action.showCommands"]},
        {"before": ["<leader>", "o"], "commands": ["workbench.action.quickOpen"]},

        // navigation
        {"before": ["<leader>", "e"], "commands": ["workbench.view.explorer"]},
        {"before": ["<leader>", "E"], "commands": ["workbench.files.action.showActiveFileInExplorer"]},
    ],

    // azure functions
    "azureFunctions.enablePowerShell": true,

    /// Language Specific Settings ///
    "[ansible]": {
        "editor.tabSize": 2
    },
    "[bats]": {
        "editor.tabSize": 2
    },
    "[go]": {
        "editor.rulers": []
    },
    "go.autocompleteUnimportedPackages": true,
    "[html]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": false,
        "editor.rulers": []
    },
    "markdown.preview.fontSize": 18,
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "[terraform]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": true
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[dockercompose]": {
        "editor.tabSize": 2
    },
    "shellcheck.disableVersionCheck": true,
    "shellcheck.customArgs": ["-x"],
    "explorer.confirmDragAndDrop": false,

    "newFile.relativeTo": "file",
    "newFile.showPathRelativeTo": "project",
    "newFile.defaultFileExtension": "",
    "[plaintext]": {
        "editor.tabSize": 2
    },
    "[jinja-md]": {
        "editor.tabSize": 2
    },
    "[jinja-html]": {
        "editor.tabSize": 2
    },
    "workbench.colorTheme": "Tomorrow Night Blue",
    "[verilog]": {
        "editor.tabSize": 2
    },
    "[systemverilog]": {
        "editor.tabSize": 2
    },
    "[haskell]": {
        "editor.tabSize": 2
    },
    "explorer.openEditors.visible": 0,
    "python.defaultInterpreterPath": "/usr/bin/python3.9",
    "python.showStartPage": false,
    "workbench.editorAssociations": {
      "*.ipynb": "jupyter-notebook"
    },
    "[vue]": {
        "editor.tabSize": 2,
        "gitlens.codeLens.scopes": [
            "document"
        ]
    },
    // "python.languageServer": "Jedi",
    "[COBOL]": {
        // "editor.semanticHighlighting.enabled": false,
        "editor.tabSize": 2,
        "files.autoGuessEncoding": false,
        "editor.snippetSuggestions": "bottom",
        "editor.renderIndentGuides": false,
        // "editor.autoIndent": "advanced",
        "editor.insertSpaces": true,
        "editor.formatOnType": true,
        // "editor.rulers": [6, 7, 11, 72],
        "editor.rulers": [80],
        "editor.detectIndentation": false,
        "editor.useTabStops": false,
        "editor.wordSeparators": "`~!@$%^&*()=+[{]}\\|;:'\",.<>/?",
    },
    "coboleditor.tabstops": [],
    "coboleditor.enable_tabstop": false,
    "jupyter.alwaysTrustNotebooks": true,
    "plantuml.exportFormat": "png",
    "lean.input.leader": "/",
    "update.showReleaseNotes": false,
    "update.mode": "manual",
    "workbench.editor.untitled.hint": "hidden",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "editor.copyWithSyntaxHighlighting": false,
    "editor.selectionClipboard": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.scrollback": 10000,
    "[ruby]": {
        "editor.tabSize": 2
    },

    // use a login shell so RVM will work
    "terminal.integrated.defaultProfile.linux": "zsh (login)",
    "terminal.integrated.profiles.linux": {
        "zsh (login)": {
            "path": "zsh",
            "args": ["-l"]
        }
    },
    "editor.semanticTokenColorCustomizations": {
        "enabled": true
    },
    "[twee3-sugarcube-2]": {
        "editor.rulers": [],
        "editor.tabSize": 2
    },
    "[liquid]": {
        "editor.tabSize": 2
    },
    "security.workspace.trust.untrustedFiles": "open",
    "[java]": {
        "editor.rulers": [120]
    },
    "java.configuration.runtimes": [

        {
            "name": "JavaSE-17",
            "path": "/usr/lib/jvm/java-17-openjdk-amd64",
            "default": true
        }
    ],
    "[python]": {
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.experiments.enabled": false,
    "notebook.output.textLineLimit": 40,
    "testing.openTesting": "openOnTestFailure"
}